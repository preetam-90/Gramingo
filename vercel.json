{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ],
  "env": {
    "NEXTAUTH_URL": {
      "description": "URL of your Vercel deployment (e.g., https://your-app.vercel.app)"
    },
    "NEXTAUTH_SECRET": {
      "description": "Secret used to encrypt the NextAuth.js JWT"
    },
    "DATABASE_URL": {
      "description": "URL of your PostgreSQL database"
    },
    "GOOGLE_CLIENT_ID": {
      "description": "Google OAuth Client ID"
    },
    "GOOGLE_CLIENT_SECRET": {
      "description": "Google OAuth Client Secret"
    }
  }
}
